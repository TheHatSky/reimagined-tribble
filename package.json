{
  "name": "shopify-app-node",
  "private": true,
  "scripts": {
    "build": "yarn run build:client",
    "build:client": "vite build --outDir dist/client",
    "debug": "node --inspect-brk server/index.ts",
    "dev": "cross-env NODE_ENV=development nodemon server/index.ts --watch ./server",
    "prepare": "husky install",
    "preserve": "yarn run build",
    "serve": "cross-env NODE_ENV=production ts-node server/index.ts",
    "start": "yarn run serve",
    "test": "vitest --reporter=verbose"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@shopify/app-bridge": "^2.0.22",
    "@shopify/app-bridge-react": "^2.0.26",
    "@shopify/app-bridge-utils": "^2.0.26",
    "@shopify/polaris": "^9.2.2",
    "@shopify/shopify-api": "^3.0.0",
    "@vitejs/plugin-react": "1.3.2",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "currency.js": "^2.0.4",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "graphql": "^16.5.0",
    "i18n-iso-countries": "^7.4.0",
    "node-fetch": "^3.2.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "serve-static": "^1.14.1",
    "vite": "^3.0.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "husky": "^7.0.4",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.2.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2",
    "vitest": "^0.10.5"
  }
}
